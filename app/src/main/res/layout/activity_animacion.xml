<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/cielo_bg"
    tools:context=".AnimacionActivity">

    <ImageView
        android:id="@+id/imgv_cielo"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginBottom="186dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/imgv_lineas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/cielo" />

    <ImageView
        android:id="@+id/imgv_nube_03"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="186dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/imgv_lineas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/nube_03" />

    <ImageView
        android:id="@+id/imgv_nube_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/imgv_lineas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.369"
        app:srcCompat="@mipmap/nube_02" />

    <ImageView
        android:id="@+id/imgv_nube_01"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/imgv_lineas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.418"
        app:srcCompat="@mipmap/nube_01" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imgv_lineas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgv_cielo"
        app:srcCompat="@mipmap/lineas_carretera" />

    <ImageView
        android:id="@+id/imgv_bg"
        android:layout_width="360dp"
        android:layout_height="410dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.908"
        app:srcCompat="@mipmap/ambulancia_clara" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imgv_photo"
        android:layout_width="75dp"
        android:layout_height="102dp"
        android:layout_marginBottom="295dp"
        android:layout_marginStart="60dp"
        app:actualImageScaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgv_bg"
        app:placeholderImage="@mipmap/cabeza_copiloto_clara"
        app:roundedCornerRadius="5dp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imgv_calavera"
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:layout_marginBottom="285dp"
        android:layout_marginEnd="56dp"
        android:visibility="visible"
        app:actualImageScaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgv_bg"
        app:placeholderImage="@mipmap/cabeza_catrina_clara"
        app:roundedCornerRadius="5dp" />

    <Button
        android:id="@+id/btnFoco1"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="152dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnFoco2"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="152dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="32dp"
        android:clickable="true"
        android:tooltipText="Ir a inicio"
        app:backgroundTint="@color/colorWhite"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_home" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:tooltipText="Compartir"
        app:backgroundTint="@color/colorWhite"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fab_info"
        app:srcCompat="@mipmap/ic_compartir" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="32dp"
        android:clickable="true"
        android:tooltipText="Más información"
        app:backgroundTint="@color/colorWhite"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/ic_note" />
</android.support.constraint.ConstraintLayout>