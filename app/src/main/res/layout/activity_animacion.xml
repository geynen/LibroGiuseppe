<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".AnimacionActivity">

    <ImageView
        android:id="@+id/imgv_cielo"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginBottom="186dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/imgv_lineas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/cielo" />

    <ImageView
        android:id="@+id/imgv_nube_03"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="186dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/imgv_lineas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/nube_03" />

    <ImageView
        android:id="@+id/imgv_nube_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/imgv_lineas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.369"
        app:srcCompat="@mipmap/nube_02" />

    <ImageView
        android:id="@+id/imgv_nube_01"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/imgv_lineas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.418"
        app:srcCompat="@mipmap/nube_01" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imgv_lineas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgv_cielo"
        app:srcCompat="@mipmap/lineas_carretera" />

    <ImageView
        android:id="@+id/imgv_bg"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.914"
        app:srcCompat="@mipmap/ambulancia_clara" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imgv_photo"
        android:layout_width="75dp"
        android:layout_height="102dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="220dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@mipmap/cabeza_copiloto_clara"
        app:roundedCornerRadius="5dp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imgv_calavera"
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:layout_marginEnd="66dp"
        android:layout_marginTop="200dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@mipmap/cabeza_catrina_clara"
        app:roundedCornerRadius="5dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="40dp"
        android:clickable="true"
        app:backgroundTint="@color/colorWhite"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/fab_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/ic_share" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="40dp"
        android:clickable="true"
        app:backgroundTint="@color/colorWhite"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/ic_info" />
</android.support.constraint.ConstraintLayout>